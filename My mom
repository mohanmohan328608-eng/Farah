<script>
function send(){
 let t=document.getElementById("m");
 if(t.value==="")return;
 let d=document.createElement("div");
 d.className="msg";
 d.innerText=t.value;
 document.getElementById("chat").appendChild(d);
 t.value="";
}
</script>

